{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build",
		"declarationDir": "build/types",
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ES5",
		"noEmit": true,
		"strict": true,
		"declaration": true,
		"removeComments": true,
		"strictNullChecks": false,
		"downlevelIteration": true
	},
	"include": [
		"src/**/*"
	]
}
